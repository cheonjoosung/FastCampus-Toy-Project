<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Value">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="numberKeypad">
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">#FFEB3B</item>
    </style>

    <style name="operatorKeypad" parent="numberKeypad">
        <item name="android:backgroundTint">#FF9800</item>
    </style>

    <style name="equalKeypad" parent="numberKeypad">
        <item name="android:backgroundTint">#F44336</item>
    </style>

    <style name="Button.KeyPad" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:background">@drawable/border_color_on_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Code">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/baseline_circle_grey_24</item>
    </style>
</resources>