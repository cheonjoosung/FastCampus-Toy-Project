<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Value">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="numberKeypad">
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">#FFEB3B</item>
    </style>

    <style name="operatorKeypad" parent="numberKeypad">
        <item name="android:backgroundTint">#FF9800</item>
    </style>

    <style name="equalKeypad" parent="numberKeypad">
        <item name="android:backgroundTint">#F44336</item>
    </style>
</resources>